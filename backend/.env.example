# Configuración del servidor
PORT=3000
NODE_ENV=development

# Base de datos (PostgreSQL)
DATABASE_URL=postgresql://USER:PASSWORD@HOST:PORT/DATABASE?sslmode=require
PG_SCHEMA=pe_c2

# JWT Secret (cambiar en producción - usar una cadena larga y aleatoria)
JWT_SECRET=cambiar_esta_clave_secreta_en_produccion_abc123xyz

# JWT Expiration (ej: 7d, 24h, 1h)
JWT_EXPIRES_IN=7d

# Orígenes permitidos para CORS (separados por coma)
CORS_ORIGIN=http://localhost:5500,https://elcorreveidile.github.io

# Admin inicial (se crea al inicializar la base de datos)
ADMIN_EMAIL=benitezl@go.ugr.es
ADMIN_PASSWORD=admin123
ADMIN_NAME=Javier Benítez Láinez

# Código de inscripción (si se define, será obligatorio para registrarse)
REGISTRATION_CODE=

# Crear estudiante de demostración (opcional)
CREATE_DEMO_USER=false
