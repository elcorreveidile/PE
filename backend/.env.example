# Configuracion del servidor
PORT=3000
NODE_ENV=development

# Base de datos PostgreSQL (Neon)
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# JWT Secret (cambiar en produccion - usar una cadena larga y aleatoria)
# Generar con: openssl rand -base64 32
JWT_SECRET=cambiar_esta_clave_secreta_en_produccion_abc123xyz

# JWT Expiration (ej: 7d, 24h, 1h)
JWT_EXPIRES_IN=7d

# CORS - Origenes permitidos (separados por coma)
CORS_ORIGIN=http://localhost:5500,https://elcorreveidile.github.io

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Admin inicial (se crea al inicializar la base de datos)
ADMIN_EMAIL=benitezl@go.ugr.es
ADMIN_PASSWORD=admin123
ADMIN_NAME=Javier Benitez Lainez
